#!/bin/zsh

# Sæt hjem
hjem=$(pwd)/pirathark
startmappe=$hjem

helpfile=$hjem/.hjælp.md

hjælp() {
    glow -w 125 $helpfile
}

start() {
    clear
    cd $startmappe
    glow .intro.md
}

# Opgaverækkefølge
#export hxr=0
